# AgentMesh Environment Variables
# Copy this file to .env and fill in with actual values
# NEVER commit the actual .env file to version control

# ===============================
# ENCRYPTION & SECURITY
# ===============================

# Fernet encryption key for data encryption
# Generate a new key using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=<generate-a-fernet-key>

# JWT secret key for token signing
# Generate using: openssl rand -hex 32
JWT_SECRET_KEY=<generate-a-secret-key>

# JWT algorithm for token signing (HS256, HS384, HS512, RS256)
JWT_ALGORITHM=HS256

# JWT token expiration in hours
JWT_EXPIRATION_HOURS=24

# ===============================
# DATABASE
# ===============================

# PostgreSQL connection string
DATABASE_URL=postgresql://agentmesh:agentmesh@localhost:5432/agentmesh

# ===============================
# MESSAGE BROKER
# ===============================

# NATS broker URL
NATS_URL=nats://localhost:4222

# Kafka broker URLs (comma-separated)
KAFKA_BROKERS=localhost:9092

# Google Cloud Pub/Sub
GCP_PROJECT_ID=<your-gcp-project>
PUBSUB_EMULATOR_HOST=localhost:8085

# ===============================
# GOOGLE CLOUD / VERTEX AI
# ===============================

# Google Cloud credentials (path to service account JSON)
GOOGLE_APPLICATION_CREDENTIALS=<path-to-credentials.json>

# Vertex AI model for agent execution
VERTEX_AI_MODEL=gemini-1.5-pro

# ===============================
# APPLICATION
# ===============================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Application log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API server host and port
API_HOST=0.0.0.0
API_PORT=8000

# ===============================
# OBSERVABILITY
# ===============================

# Prometheus metrics enabled
PROMETHEUS_ENABLED=true

# Prometheus metrics port
PROMETHEUS_PORT=9090

# ===============================
# DOCKER/DEPLOYMENT
# ===============================

# Docker image tag
DOCKER_IMAGE_TAG=latest

# Docker compose environment
COMPOSE_PROJECT_NAME=agentmesh
